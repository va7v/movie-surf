<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_random">

    <fragment android:id="@+id/navigation_random"
        android:name="com.example.tmdbapp.ui.random.RandomMovieFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_random" >

        <action android:id="@+id/action_navigation_random_to_navigation_details"
            app:destination="@id/navigation_details"
            app:popUpTo="@+id/navigation_random"/>
    </fragment>

    <fragment
        android:id="@+id/navigation_top"
        android:name="com.example.tmdbapp.ui.top.TopMoviesFragment"
        android:label="@string/title_top"
        tools:layout="@layout/fragment_top" >

        <action android:id="@+id/action_navigation_top_to_navigation_details"
            app:destination="@id/navigation_details"
            app:popUpTo="@+id/navigation_top"/>
    </fragment>

    <fragment
        android:id="@+id/navigation_search"
        android:name="com.example.tmdbapp.ui.search.SearchMovieFragment"
        android:label="@string/title_search"
        tools:layout="@layout/fragment_search">

    <action android:id="@+id/action_navigation_search_to_navigation_result"
        app:destination="@id/navigation_result"
        app:popUpTo="@+id/navigation_search"/>
        />
    </fragment>

    <fragment
        android:id="@+id/navigation_result"
        android:name="com.example.tmdbapp.ui.search.ResultMovieFragment"
        android:label="Результат поиска"
        tools:layout="@layout/fragment_random" >
        <argument
            android:name="query"
            android:defaultValue=""
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/navigation_details"
        android:name="com.example.tmdbapp.ui.details.MovieDetailsFragment"
        android:label="@string/details"
        tools:layout="@layout/fragment_details" >
        <argument
            android:name="movie_id"
            app:argType="string"
            android:defaultValue="" />
        <argument
            android:name="title"
            app:argType="string"
            android:defaultValue="" />
        <argument
            android:name="rate"
            app:argType="string"
            android:defaultValue="" />
        <argument
            android:name="poster_path"
            app:argType="string"
            android:defaultValue="" />
        <argument
            android:name="date"
            app:argType="string"
            android:defaultValue="" />
        <argument
            android:name="overview"
            app:argType="string"
            android:defaultValue="" />

    </fragment>

</navigation>