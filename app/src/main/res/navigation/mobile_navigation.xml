<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_random">

    <fragment
        android:id="@+id/navigation_random"
        android:name="com.example.tmdbapp.ui.random.RandomFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_random" />

    <fragment
        android:id="@+id/navigation_top"
        android:name="com.example.tmdbapp.ui.topmovie.TopFragment"
        android:label="@string/title_top"
        tools:layout="@layout/fragment_top" />

    <fragment
        android:id="@+id/navigation_saved"
        android:name="com.example.tmdbapp.ui.savedmovie.SavedFragment"
        android:label="@string/title_saved"
        tools:layout="@layout/fragment_saved" />
</navigation>